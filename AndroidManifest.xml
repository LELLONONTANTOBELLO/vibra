<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="{{ args.package }}"
    android:versionCode="{{ args.numeric_version }}"
    android:versionName="{{ args.version }}">

    <!-- Permissions -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_SPECIAL_USE" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    
    <uses-sdk
        android:minSdkVersion="{{ args.min_sdk_version }}"
        android:targetSdkVersion="{{ args.android_api }}" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="{{ args.name }}"
        android:theme="@android:style/Theme.NoTitleBar"
        android:usesCleartextTraffic="true">

        <!-- Main Activity -->
        <activity
            android:name="org.kivy.android.PythonActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="{{ args.name }}"
            android:screenOrientation="{{ args.orientation }}"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Background Service -->
        <service
            android:name="org.kivy.android.PythonService"
            android:foregroundServiceType="specialUse"
            android:exported="false">
            <property
                android:name="android.app.PROPERTY_SPECIAL_USE_FGS_SUBTYPE"
                android:value="Receiving and processing vibration patterns from remote server" />
        </service>

    </application>
</manifest>